@{
    string title = "Создание дисциплины";
	ViewData["Title"] = title;
}
<h3 class="mb-4">@title</h3>
<form method="post" enctype="multipart/form-data" class="form-horizontal" role="form">
    <input type="hidden" name="Id" />   
    <div class="form-group mb-2">
        <label for="Code" class="col-md-2 control-label">Код:</label>
        <div class="col-md-7 mx-auto">
            <input type="text" name="Code" class="form-control" required />
        </div>       
    </div> 
    <div class="form-group mb-2">
        <label for="Name" class="col-md-2 control-label">Название:</label>
        <div class="col-md-7 mx-auto">
            <input type="text" name="Name" class="form-control" required />
        </div>       
    </div> 
    <div class="form-group mb-2">
        <label for="TypeProgramId" class="col-md-2 control-label">Тип программы:</label>
        <div class="col-md-7 mx-auto">
            <select name="TypeProgramId" class="form-select" asp-items="ViewBag.TypesProgram" required></select>
        </div>       
    </div>  
    <div class="form-group mb-2">
        <label for="Content" class="col-md-2 control-label">Файл:</label>
        <div class="col-md-7 mx-auto">
            <input type="file" name="Content" class="form-control" required/>
        </div>       
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Отправить" />
    </div>
</form>
<a asp-action="Index" asp-route-id="@ViewBag.ProfileId" class="btn btn-outline-secondary mt-3">Назад</a>