@model Egor.Models.Dept
@{
    string title = "Редактирование направления";
    ViewData["Title"] = title;
}
<h3 class="mb-4">@title</h3>
<form method="post" class="form-horizontal" role="form">
    <input type="hidden" value="@Model.Id" name="Id" />
    <div class="form-group mb-2">
        <label for="Code" class="col-md-2 control-label">Код:</label>
        <div class="col-md-2 mx-auto">
            <input type="text" name="Code" value="@Model.Code" class="form-control" required />
        </div>
    </div>
    <div class="form-group mb-2">
        <label for="Name" class="col-md-2 control-label">Название:</label>
        <div class="col-md-7 mx-auto">
            <input type="text" name="Name" value="@Model.Name" class="form-control" required />
        </div>       
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Отправить" />
    </div>
</form>
<a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary mt-3">Назад</a>